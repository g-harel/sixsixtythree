{
    "firestore": {
        "rules": "firestore.rules"
    },
    "functions": {
        "source": ".functions"
    },
    "hosting": {
        "public": ".public",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
